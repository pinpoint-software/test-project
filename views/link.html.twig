{% extends "layout.html.twig" %}

{% block content %}
<script src="/js/link.js"></script>

<div class="row">
<div class="col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3">
    {% if warning is not empty %}
        <div class="alert alert-warning" role="alert">{{ warning }}</div>
    {% endif %}
    <form method="post">
		<input type="radio" id="link" name="post-type" value="link" onclick="setLinkPost()" checked>
		<label for="link">Link Post</label>
		<input type="radio" id="text" name="post-type" value="text" onclick="setTextPost()">
		<label for="text">Text Post</label><br>
        <div class="form-group">
            <label for="title">Title</label>
            <input type="text" class="form-control" id="title" name="title" placeholder="Title">
        </div>
        <div class="form-group" id="url-group">
            <label for="url">URL</label>
            <input type="text" class="form-control" id="url" name="url" placeholder="URL">
        </div>
		<div class="form-group, hide" id="text-group">
            <label for="url">Text</label>
            <input type="text" class="form-control" id="text" name="text" placeholder="Text">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>
</div>
{% endblock content %}
